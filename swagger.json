          },
          "password": {
            "type": "string"
          },
          "dob": {
            "type": "string",
            "format": "date"
          },
          "address": {
              "type": "string"
          },
          "description": {
              "type": "string"
          },
          "createdAt": {
              "type": "string",
              "format": "date-time"
          }
        }
      },
      "Users": {
        "type": "array",
        "$ref": "#/definitions/User"
